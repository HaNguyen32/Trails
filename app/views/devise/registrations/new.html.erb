
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trails In Viet Nam</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <style>
  .footer {
    padding: 50px;
    height: 35px;
  }
  

  </style>

<body>
<%= render "layouts/navbar"%>
<div class= "background-img-sign-up">
   <%= form_with model: resource, url: user_registration_path, id: 'new_user', class: 'registration-main', local: true do |f| %>
   <div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>
    <p>
    ----------------------------
    </p>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>
  <%#= render 'shared/error_messages', model: resource %>
  <!-- Email -->
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nick_name, class:"input-default", id:"nickname", placeholder:"例) Ruby", maxlength:"40" %>
  </div>
  <!-- Email -->
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Eメール</label>
      <span class="indispensable">※ 必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可(Địa chỉ mail PC hoặc Điện thoại)", autofocus: true %>
  </div>
  <!-- Name -->
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前</label>
      <span class="indispensable">※ 必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) NGUYEN" %>
      <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) A " %>
    </div>
  </div>
  <!-- Sex-->
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">性別</label>
      <span class="indispensable">※ 必須</span>
    </div>
    <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class: "sex-select", id: "user-sex"}) %>
  </div> 

  <!-- Date ò birth -->
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :date_birth,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>
  <!-- Mật khẩu -->
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">※ 必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"8文字以上の半角英数字" %>
  </div>
  <!-- Submit -->
  <div class='register-btn'>
    <%= f.submit "登録", class:"register-red-btn" %>
  </div>
<% end %>
</div>

   <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<%#= render "layouts/footer" %>

</body>

</html>
