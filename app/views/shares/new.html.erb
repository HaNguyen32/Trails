
<!doctype html>
<html lang="ja">
  <head>
   <%= render "layouts/navbar"%>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trails</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <style>
  .text-center {
  
  }
  .footer > .container {
   height: 200px;
   padding-top:40px;
   padding-right: 15px;
   padding-left: 15px;
   }
  </style>
  </head>
  <body>
  <div class="container ">   
    <h2 class="text-center">登山記録作成</h2>
    <legend class="text-center">基本情報入力</legend>
    <%= form_with model: @shares, data: { turbo: false }, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
    
     <div class="mb-3">
       <%= f.label :title, class: "col-sm-12 col-form-label " do %>
       <strong>タイトル </strong>
       <%= f.text_area :title, class: "form-control", id: "exampleFormControlInput", placeholder: "ファンシーパンご来光" %>
       <% end %>
    </div>
   
    <div class="mb-3">
       <%= f.label :area, class: "col-sm-12 col-form-label" do %>
       <strong>地域</strong>
       <%= f.text_area :area, class: "form-control", id: "exampleFormControlInput", placeholder: "北部" %>
       <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :mountain_area, class: "col-sm-12 col-form-label" do%>
       <strong>詳細山域</strong>
      <%= f.text_area :mountain_area, class: "form-control", id: "exampleFormControlInput", placeholder: "サパ" %>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :mountain_name, class: "col-sm-12 col-form-label" do%>
       <strong>山名</strong>
      <%= f.text_area :mountain_name, class: "form-control", id: "disabledTextInput", placeholder: "ファンシーパン山" %>
       <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :date_entry, class: "col-sm-12 col-form-label" do  %>
      <strong>入山日</strong>
      <%= f.text_area :date_entry, class: "form-control", id: "disabledTextInput", placeholder: "2023/8/1" %>
      <% end %>
    </div>
    <div class="mb-3">
      <%= f.label :date_exit, class: "col-sm-12 col-form-label" do%>
       <strong>下山日</strong>
      <%= f.text_area :date_exit, id: "disabledTextInput", class: "form-control", placeholder: "2023/8/3" %>
       <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :companions, class: "col-sm-12 col-form-label" do %>
      <strong>同行者</strong>
      <%= f.text_area :companions, { id: "disabledTextInput", class: "form-control", placeholder: "July" } %>
       <% end %>
    </div>
    <div class="mb-3">
      <%= f.label :access, class: "col-sm-12 col-form-label" do %>
      <strong>アクセス方法</strong>
      <%= f.text_area :access, class: "form-control", id: "disabledTextInput", placeholder: "バイク" %>
       <% end %>
    </div>
    <div class="mb-3">
      <%= f.label :course, class: "col-sm-12 col-form-label" do %>
      <strong>コース</strong>
      <%= f.text_area :course, class: "form-control", id: "disabledTextInput", placeholder: "......." %>
       <% end %>
    </div>
    <div class="mb-3">
      <%= f.label :itinerary, class: "col-sm-12 col-form-label" do %>
      <strong>行程</strong>
      <%= f.text_area :itinerary,class: "form-control form-control-lg", id: "disabledTextInput", rows:"4", placeholder:"ロプウェイ(13:07)・・・頂上(14:38)" %>
       <% end %>
    </div>
    <div class="mb-3">
       <%= f.label :activity_record, class: "col-sm-12 col-form-label" do %>
       <strong>行動記録/メモー</strong>
       <%= f.text_area :activity_record, class: "form-control form-control-lg", id: "disabledTextInput", rows:"4", placeholder:"CATCAT村に行ってみたら渓流のキレイな公園でした。ひたすらお土産屋が並んで人も多い観光地。「村」ではないのね。" %>
        <% end %>
    </div>
    <div class="mb-3">
       <%= f.label :image_tag, class: "col-sm-6 col-form-label" do %>
       <strong>写真をアプロードする</strong>
       <%= f.file_field :image, class: "form-control", id: "disabledTextInput" %>
       <% end %>
   </div>
   <div class="container text-center d-grid gap-2 col-6 mx-auto">
     <%= f.submit "投稿",class:"text-center btn btn-primary btn-lg"%>
   </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  <%end%>


<footer class="footer ">
  <div class="container ">
    <p class="text-muted bg-dark width-100%"> </p>
    <div class="row">
      <div class="col-12 col-md-6">
        <ul class="list-unstyled">
          <li><a class="text-drak" href="#">HOME</a></li>
          <li><a class="text-drak" href="#">新規登録</a></li>
          <li><a class="text-drak" href="#">HIKES IN VIETNAM</a></li>
      </div>
      <div class="col-12 col-md-6">
        <ul class="list-unstyled">
          <li><a class="text-drak" href="#">Facebook</a></li>
          <li><a class="text-drak" href="#">Twitter</a></li>
          <li><a class="text-drak" href="#">山と人</a></li>
        </ul>
      </div>
  </div>
</footer>
  </body>
</html>

