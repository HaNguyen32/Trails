<!doctype html>
<html lang="en">
  <head>
 
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <style>
  .container {
    padding:60px 80px ;

  }
  .text-center {
    padding: 50px;
  }
  </style>
  </head>
  <body>
  <%# navbar %>
  <%= render "layouts/navbar"%>
  <%# navbar %>
 <% if user_signed_in? %>
  <h1 class="text-center"><%= link_to "Hello !!#{current_user.nick_name}さん", "#" %></h1>
 <% else %>
  <h1 class="text-center"> Hello Guest!!</h1>
  <% end %>

 <%#記事の詳細%>
 <div class="container" >
  <div class="card ">
  <%= image_tag @share.image, class: "card-img-top h-auto", alt: "..." %>
  <div class="card-body">
    <h1><%= @share.title %> </h1>
    <h3><%= link_to "by #{@share.user.nick_name}", user_path(@share.user), class: "card-text" %></h3>
  </div>
  <ol class="list-group ">
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">地域</div>
      <%= @share.area %>
    </div>
  </li>
   <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">詳細山域</div>
      <%= @share.mountain_area %>
    </div>
  </li>
   <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">山名</div>
      <%= @share.mountain_name %>
    </div>
  </li>
   <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">入山日</div>
      <%= @share.date_entry %>
    </div>
  </li>
   <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">下山日</div>
      <%= @share.date_exit %>
    </div>
  </li>
   <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">同行者</div>
      <%= @share.companions %>
    </div>
  </li>
   <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">アクセス方法</div>
      <%= @share.access %>
    </div>
  </li>
   <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">コース</div>
      <%= @share.course %>
    </div>
  </li>
   <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">行動記録/メモー</div>
      <%= @share.activity_record %>
    </div>
  </li>
</ol>
</div>
</div>
<%#記事の詳細%>


<footer class="footer bg-dark">
  <div class="container ">
    <p class="text-muted bg-dark width-100%"> </p>
    <div class="row">
      <div class="col-12 col-md-6">
        <ul class="list-unstyled">
          <li><a class="text-drak" href="#">HOME</a></li>
          <li><a class="text-drak" href="#">新規登録</a></li>
          <li><a class="text-drak" href="#">HIKES IN VIETNAM</a></li>
      </div>
      <div class="col-12 col-md-6">
        <ul class="list-unstyled">
          <li><a class="text-drak" href="#">Facebook</a></li>
          <li><a class="text-drak" href="#">Twitter</a></li>
          <li><a class="text-drak" href="#">山と人</a></li>
        </ul>
      </div>
  </div>
</footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>








